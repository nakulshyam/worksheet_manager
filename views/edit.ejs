<% include ./partials/header %>

<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">New post</h5>
          <form action="/posts/<%=post.id%>?_method=PUT" method="POST">
            <form action="/posts" method="POST">
              <form class="form-signin">
                <div class="form-label-group">
                  <input type="text" class="form-control" name="post[head]" value="<%= post.head%>" required autofocus>
                  <label for="inputEmail">Subject which you teach</label>
                </div>
                <div>
                  <input type="text" class="form-control" name="post[subhead]" value="<%= post.subhead%>" required
                    autofocus>
                  <label for="inputEmail"></label>
                </div>

                <div class="form-label-group">
                  <input type="text" id="inputPassword" class="form-control" name="post[desc]" value="<%= post.desc%>"
                    required>
                  <label for="inputPassword"></label>
                </div>
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Post</button>
              </form>
            </form>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  body {
    background: #007bff;
    background: linear-gradient(to right, #0062E6, #33AEFF);
  }